            <VBox alignment="CENTER_LEFT" maxWidth="300.0" minWidth="126.0" prefWidth="126.0" spacing="50.0">
               <children>
                  <VBox spacing="20.0">
                     <children>
                        <VBox prefWidth="195.0">
                           <children>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Protocol">
                                 <font>
                                    <Font size="19.0" />
